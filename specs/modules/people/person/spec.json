{
  "entity": "person",
  "namespace": "people",
  "label": { "singular": "Person", "plural": "People" },
  "id": "id",
  "slug": "slug",
  "routing": {
    "list": "/people/directory",
    "detail": "/people/directory/[slug]"
  },
  "permissions": {
    "read": ["User", "HR", "Admin", "Owner"],
    "write": ["HR", "Admin", "Owner"],
    "delete": ["Admin", "Owner"],
    "scope": "org_id"
  },
  "fields": [
    { "name": "id", "type": "uuid", "required": true },
    { "name": "slug", "type": "string", "required": true, "unique": true },
    { "name": "name", "type": "string", "required": true, "search": { "fts": true } },
    { "name": "email", "type": "string", "required": true, "unique": true, "validation": "email" },
    { "name": "role", "type": "string", "required": true },
    { "name": "team", "type": "string", "required": false },
    { "name": "manager_id", "type": "ref", "ref": "people.person" },
    { "name": "status", "type": "enum", "values": ["active", "onboarding", "offboarding", "inactive"], "default": "active" },
    { "name": "startDate", "type": "date", "required": true },
    { "name": "endDate", "type": "date" },
    { "name": "phone", "type": "string" },
    { "name": "location", "type": "string" },
    { "name": "avatar", "type": "string" },
    { "name": "bio", "type": "text" },
    { "name": "assignedAssets", "type": "number", "computed": true }
  ],
  "table": {
    "columns": ["name", "email", "role", "team", "status", "startDate", "assignedAssets"],
    "defaultSort": ["name", "asc"],
    "filters": ["status", "team", "role"]
  },
  "forms": {
    "create": ["name", "email", "role", "team", "startDate", "phone", "location"],
    "edit": ["name", "email", "role", "team", "status", "startDate", "endDate", "phone", "location", "bio"]
  }
}
