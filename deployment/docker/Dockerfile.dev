# =============================================================================
# IdaraOS - Development Dockerfile
# =============================================================================
# Lightweight development image with volume mounts for hot reloading
# Packages are installed at runtime with a cached pnpm store
# =============================================================================

FROM node:22-alpine

# Install pnpm globally
RUN corepack enable && corepack prepare pnpm@latest --activate

# Install development tools
RUN apk add --no-cache git

# Set pnpm store location (will be volume-mounted for caching)
ENV PNPM_HOME="/root/.local/share/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

WORKDIR /app

# Set development environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Expose port
EXPOSE 3000

# Working directory for next dev
WORKDIR /app/apps/web

# Copy startup script
COPY deployment/docker/start-dev.sh /start.sh
RUN chmod +x /start.sh

CMD ["/start.sh"]
